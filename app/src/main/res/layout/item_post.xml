<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imvAvatarPost"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:src="@drawable/images"
            app:shapeAppearance="@style/avatar" />

        <TextView
            android:id="@+id/tvNameAccountPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Le Luong"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvPost"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:gravity="center"
            android:text="ĐĂNG BÀI"
            android:textColor="#3F51B5" />


    </LinearLayout>

    <EditText
        android:id="@+id/edtDetailPost"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="top"
        android:padding="10dp"
        android:hint="Bài viết của bạn ..."
        android:inputType="text|textMultiLine" />

    <ImageView
        android:id="@+id/imvPost"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUploadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:background="@color/purple_700"
        android:text="Tải ảnh lên"
        android:textColor="@color/white" />


</LinearLayout>